@model PostViewModel

@{
    ViewData["Title"] = "Detalhes da Postagem";
}

<div class="container mt-4">
    <h2 class="text-center">Postagem e Comentários</h2>

    @if (User.Identity.IsAuthenticated)
    {
        <h3>Adicionar Novo Comentário</h3>

        <!-- Formulário para adicionar um novo comentário -->
        <form asp-action="Create" asp-controller="Comment" method="post" class="mt-3">
            <div class="form-group">
                <label for="newCommentMessage">Comentário</label>
                <textarea id="newCommentMessage" name="Message" class="form-control" rows="4" required></textarea>
            </div>

            <!-- Campo oculto para passar o PostId -->
            <input type="hidden" name="PostId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Enviar Comentário</button>
        </form>

        <div class="card">
            <div class="card-body">
                <h2>@Model.Title</h2>
                <p>@Model.Message</p>
            </div>
        </div>

        <h3 class="mt-4">Comentários</h3>

        @if (Model.Comments.Any())
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <p>@comment.Message</p>
                        <footer class="blockquote-footer">Comentário por: @comment.CommentAuthorName</footer>
                        <a asp-action="Delete" asp-controller="Comment" asp-route-id="@comment.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este comentário?');">Excluir</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Nenhum comentário para esta postagem.</p>
        }
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Você precisa estar <a asp-area="Identity" asp-page="/Account/Login">logado</a> para criar uma postagem.
        </div>
    }
</div>
